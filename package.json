{
	"name": "@badisi/ngx-safe-subscribe",
	"version": "2.0.6",
	"description": "Easy way to automatically unsubscribe from RxJS observables in Angular components",
	"homepage": "https://github.com/Badisi/ngx-safe-subscribe",
	"license": "MIT",
	"sideEffects": true,
	"author": {
		"name": "Badisi"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Badisi/ngx-safe-subscribe.git"
	},
	"keywords": [
		"angular",
		"rxjs",
		"observable",
		"subscribe",
		"unsubscribe",
		"ondestroy",
		"safe-subscribe",
		"safesubscribe"
	],
	"scripts": {
		"build": "ng-packagr -p package.json",
		"publish": "npm publish dist --access public",
		"unpublish": "npm -f unpublish"
	},
	"ngPackage": {
		"$schema": "./node_modules/ng-packagr/ng-package.schema.json",
		"lib": {
			"entryFile": "ngx-safe-subscribe.ts"
		},
		"whitelistedNonPeerDependencies": [
			"angular",
			"rxjs"
		]
	},
	"peerDependencies": {
		"@angular/core": "^6.0.0 || ^7.0.0 || ^8.0.0-beta.0",
		"rxjs": "^6.0.0"
	},
	"devDependencies": {
		"ng-packagr": "^5.0.0",
		"@angular/compiler-cli": "^7.0.0",
		"@angular/compiler": "^7.0.0",
		"@angular/core": "^7.0.0",
		"typescript": ">=3.1.1 <3.3",
		"tslib": "^1.9.0"
	}
}
