{
    "name": "@badisi/ngx-safe-subscribe",
    "version": "2.2.1",
    "description": "Easy way to automatically unsubscribe from RxJS observables in Angular components",
    "homepage": "https://github.com/Badisi/ngx-safe-subscribe",
    "license": "MIT",
    "sideEffects": true,
    "author": {
        "name": "Badisi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Badisi/ngx-safe-subscribe.git"
    },
    "keywords": [
        "angular",
        "rxjs",
        "observable",
        "subscribe",
        "unsubscribe",
        "ondestroy",
        "safe-subscribe",
        "safesubscribe"
    ],
    "scripts": {
        "build": "ng-packagr -p package.json",
        "publish": "npm publish ./dist --access public",
        "unpublish": "npm -f unpublish"
    },
    "ngPackage": {
        "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
        "lib": {
            "entryFile": "ngx-safe-subscribe.ts"
        },
        "allowedNonPeerDependencies": [
            "angular",
            "rxjs"
        ]
    },
    "peerDependencies": {
        "@angular/core": "^11.2.7",
        "rxjs": "^6.6.7"
    },
    "devDependencies": {
        "@angular/compiler": "^12.0.0",
        "@angular/compiler-cli": "^12.0.0",
        "@angular/core": "^12.0.0",
        "ng-packagr": "^12.0.0",
        "tslib": "^2.1.0",
        "typescript": ">=4.2.3 <4.3",
        "zone.js": "~0.11.4"
    }
}
